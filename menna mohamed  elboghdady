task 4
def remove_from_list():
    # تعريف القائمة بها أربعة عناصر
    My_list = ['Apple', 'Banana', 'Cherry', 'Data']
    
    # طلب من المستخدم إدخال العنصر الذي يريد حذفه
    item_to_remove = input("Enter the item you want to remove: ")
    
    # التحقق إذا كان العنصر موجود في القائمة
    if item_to_remove in My_list:
        My_list.remove(item_to_remove)  # حذف العنصر
        print(f"Item '{item_to_remove}' has been removed successfully.")
    else:
        print(f"Item '{item_to_remove}' was not found in the list.")
    
    # طباعة القائمة بعد التغيير
    print("Updated list:", My_list)
# استدعاء الدالة
remove_from_list()
