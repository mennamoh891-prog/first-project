task 5
def calculate_factorial():  
    # عرف دالة باسم calculate_factorial
    N = int(input("Enter a positive integer: "))  
    # اطلب من المستخدم إدخال عدد صحيح موجب
    result = 1  
    # عرّف متغير اسمه result و ابدأ بقيمة 1
    for i in range(1, N + 1):  
        # استخدم حلقة for للتكرار من 1 إلى N
        result *= i  
        # داخل الحلقة اضرب العدد الحالي في الناتج الحالي
    print("Factorial of", N, "is:", result)  
    # اطبع القيمة النهائية للف
